<%- include("layout/header")   %>
   <main>
    <h3>Add a Programming Language</h3>

<form action="/" method="post">
    <input type="text" placeholder="Programming Languages" name="language"/>

    <button type="submit">Add </button>
</form>

<div>
   
    <ul>
        <h4>Added Programming Language List</h4>
        <% if(languages.length > 0){ %>
           <%  languages.map((lang)=> { %>
            <li><%= lang %></li>
       <% }) %>  
        <% } else{ %>
            <p>No Data Found</p>
       <%  } %>
    </ul>
  
</div>
   </main>
   <%- include("layout/footer")   %>
